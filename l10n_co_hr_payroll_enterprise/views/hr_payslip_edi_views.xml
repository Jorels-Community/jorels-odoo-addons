<odoo>
    <record id="view_hr_payslip_edi_form" model="ir.ui.view">
        <field name="name">hr.payslip.edi.form</field>
        <field name="model">hr.payslip.edi</field>
        <field name="arch" type="xml">
            <form string="Edi Payslip">
                <header>
                    <button class="oe_highlight" invisible="state not in ['draft']" name="action_payslip_done" string="Confirm" type="object"/>
                    <button groups="base.group_no_one" invisible="state == 'draft'" name="status_zip" string="Consult DIAN" type="object"/>
                    <button invisible="state not in ['confirm','done']" name="refund_sheet" string="Refund" type="object"/>
                    <button invisible="state not in ['cancel']" name="action_payslip_draft" string="Set to Draft" type="object"/>
                    <button class="oe_highlight" invisible="state not in ['draft']" name="compute_sheet" string="Compute Sheet" type="object"/>
                    <button invisible="state not in ['draft','done']" name="action_payslip_cancel" string="Cancel Payslip" type="object"/>
                    <field name="state" statusbar_visible="draft,done" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-globe icon" invisible="edi_uuid == False" name="dian_preview" type="object">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">
                                    DIAN
                                </span>
                                <span class="o_stat_text">
                                    Web View
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group name="group-left">
                            <field name="number"/>
                            <field name="month"/>
                            <field name="year" widget="integer"/>
                            <field name="origin_payslip_id"/>
                        </group>
                        <group name="group-right">
                            <field name="date"/>
                            <field name="employee_id"/>
                            <field name="contract_id"/>
                            <field name="credit_note"/>
                            <field groups="base.group_multi_company" name="company_id"/>
                        </group>
                        <group name="payment">
                            <field name="payment_form_id" readonly="True"/>
                            <field name="payment_method_id" readonly="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="payslips" string="Payslips">
                            <field domain="[('state', '=', 'done'),                                             ('employee_id', '=', employee_id),                                             ('month', '=', month),                                             ('year', '=', year),                                             ('credit_note', '=', False),                                             ('contract_id', '=', contract_id)]" name="payslip_ids"/>
                            <group>
                                <field name="accrued_total_amount" readonly="True" widget="monetary"/>
                                <field name="deductions_total_amount" readonly="True" widget="monetary"/>
                                <field name="total_amount" readonly="True" widget="monetary"/>
                                <field invisible="1" name="currency_id"/>
                            </group>
                            <group>
                                <field name="worked_days_total" readonly="True"/>
                            </group>
                        </page>
                        <page name="edi_response" string="Edi Response">
                            <group>
                                <field name="edi_sync" readonly="True"/>
                                <field name="edi_is_not_test" readonly="True"/>
                                <field name="edi_is_valid" readonly="True"/>
                                <field name="edi_is_restored" readonly="True"/>
                                <field name="edi_algorithm" readonly="True"/>
                                <field name="edi_class" readonly="True"/>
                                <field name="edi_number" readonly="True"/>
                                <field class="text-break" name="edi_uuid" readonly="True"/>
                                <field name="edi_issue_date" readonly="True"/>
                                <field name="edi_expedition_date" readonly="True"/>
                                <field class="text-break" name="edi_zip_key" readonly="True"/>
                                <field name="edi_status_code" readonly="True"/>
                                <field class="text-break" name="edi_status_description" readonly="True"/>
                                <field class="text-break" name="edi_status_message" readonly="True"/>
                                <field class="text-break" name="edi_errors_messages" readonly="True"/>
                                <field name="edi_xml_name" readonly="True"/>
                                <field name="edi_zip_name" readonly="True"/>
                                <field class="text-break" name="edi_signature" readonly="True"/>
                                <field class="text-break" name="edi_qr_code" readonly="True"/>
                                <field class="text-break" name="edi_qr_data" readonly="True"/>
                                <field class="text-break" name="edi_qr_link" readonly="True" widget="url"/>
                                <field class="text-break" name="edi_pdf_download_link" readonly="True" widget="url"/>
                                <field name="edi_xml_base64" readonly="True"/>
                                <field name="edi_application_response_base64" readonly="True"/>
                                <field name="edi_attached_document_base64" readonly="True"/>
                                <field name="edi_pdf_base64" readonly="True"/>
                                <field name="edi_zip_base64" readonly="True"/>
                                <field name="edi_type_environment" readonly="True"/>
                            </group>
                        </page>
                        <page string="Edi Payload">
                            <group>
                                <field name="edi_payload_html" readonly="True"/>
                                <field class="text-break" groups="base.group_no_one" name="edi_payload" readonly="True"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form></field>
    </record>
    <record id="view_hr_payslip_edi_tree" model="ir.ui.view">
        <field name="name">hr.payslip.edi.tree</field>
        <field name="model">hr.payslip.edi</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" string="Edi Payslip">
                <field name="number"/>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="year"/>
                <field name="month"/>
                <field name="date"/>
                <field groups="base.group_multi_company" name="company_id"/>
                <field name="worked_days_total" sum="worked_days_total"/>
                <field name="accrued_total_amount" sum="accrued_total_amount"/>
                <field name="deductions_total_amount" sum="deductions_total_amount"/>
                <field name="total_amount" sum="total_amount"/>
                <field name="state"/>
            </tree></field>
    </record>
    <record id="action_view_hr_payslip_edi" model="ir.actions.act_window">
        <field name="name">Edi Payslips</field>
        <field name="res_model">hr.payslip.edi</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Edi Payslip!
            </p></field>
    </record>
    <menuitem action="action_view_hr_payslip_edi" groups="hr_payroll.group_hr_payroll_user" id="menu_payslip_edi_tree" name="Edi Payslips" parent="hr_payroll.menu_hr_payroll_payslips"/>
</odoo>
