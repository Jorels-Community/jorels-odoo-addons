<odoo>
    <record id="res_config_settings_view_form_l10n_co_hr_payroll" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.l10n_co_hr_payroll.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_localization']" position="replace">
                <field invisible="1" name="module_l10n_co_hr_payroll"/>
                <div class="row mt16 o_settings_container" id="hr_payroll_localization" invisible="1"/>
                <div class="row mt16 o_settings_container" id="hr_payroll_localization_co" invisible="module_l10n_co_hr_payroll == False">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span aria-label="Values set here are company-specific." class="fa fa-lg fa-building-o" groups="base.group_multi_company" role="img" title="Values set here are company-specific."/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='hr_payroll_localization']" position="after">
                <h2>
                    Parameters
                </h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Legal parameters
                            </span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="smmlv_value"/>
                                    <field name="smmlv_value"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="uvt_value"/>
                                    <field name="uvt_value"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="stm_value"/>
                                    <field name="stm_value"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>
                    Percentages
                </h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Overtime percentages
                            </span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="daily_overtime"/>
                                    <field name="daily_overtime"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="overtime_night_hours"/>
                                    <field name="overtime_night_hours"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="sunday_holiday_daily_overtime"/>
                                    <field name="sunday_holiday_daily_overtime"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="sunday_night_overtime_holidays"/>
                                    <field name="sunday_night_overtime_holidays"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Surcharge percentages
                            </span>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="hours_night_surcharge"/>
                                    <field name="hours_night_surcharge"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="daily_surcharge_hours_sundays_holidays"/>
                                    <field name="daily_surcharge_hours_sundays_holidays"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="sunday_holidays_night_surcharge_hours"/>
                                    <field name="sunday_holidays_night_surcharge_hours"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>
                    DIAN settings
                </h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="edi_payroll_enable"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Enable electronic payroll for this company
                            </span>
                            <div class="text-muted">
                                Enable electronic payroll for this company
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="edi_payroll_is_not_test"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="edi_payroll_is_not_test" string="Enable production environment"/>
                            <div class="text-muted">
                                Once enabled in DIAN
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Software ID
                            </span>
                            <div class="text-muted">
                                Payroll software ID
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="edi_payroll_id"/>
                                    <field name="edi_payroll_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Software pin
                            </span>
                            <div class="text-muted">
                                Payroll software pin
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="edi_payroll_pin"/>
                                    <field name="edi_payroll_pin" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                TestSetID
                            </span>
                            <div class="text-muted">
                                DIAN TESTSETID
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="edi_payroll_test_set_id"/>
                                    <field name="edi_payroll_test_set_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="edi_payroll_consolidated_enable"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                Enable consolidated electronic payroll for this company
                            </span>
                            <div class="text-muted">
                                Enable consolidated electronic payroll for this company
                            </div>
                        </div>
                    </div>
                </div>
            </xpath></field>
    </record>
</odoo>
