<odoo>
    <record id="hr_salary_rule_view_form_l10n_co_hr_payroll" model="ir.ui.view">
        <field name="name">hr.salary.rule.form.l10n_co_hr_payroll.inherit</field>
        <field name="model">hr.salary.rule</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[1]" position="before">
                    <label class="oe_edit_only" for="type_concept"/>
                    <h2>
                        <field class="oe_edit_only" name="type_concept"/>
                    </h2>
                    <label for="earn_category" invisible="type_concept != 'earn'"/>
                    <h2>
                        <field invisible="type_concept != 'earn'" name="earn_category"/>
                    </h2>
                    <label for="deduction_category" invisible="type_concept != 'deduction'"/>
                    <h2>
                        <field invisible="type_concept != 'deduction'" name="deduction_category"/>
                    </h2>
                </xpath>
                <xpath expr="//field[@name='appears_on_payslip']" position="after">
                    <field name="edi_is_detailed"/>
                </xpath>
                <xpath expr="//field[@name='quantity']" position="before">
                    <field name="edi_quantity_select"/>
                    <newline/>
                </xpath>
                <xpath expr="//field[@name='amount_percentage']" position="after">
                    <separator colspan="4" string="Edi Percent"/>
                    <field name="edi_percent_select"/>
                    <newline/>
                    <field invisible="edi_percent_select != 'fix'" name="edi_percent_fix" required="edi_percent_select == 'fix'"/>
                    <newline/>
                    <field colspan="4" invisible="edi_percent_select != 'code'" name="edi_percent_python_compute" required="edi_percent_select == 'code'"/>
                </xpath>
                <xpath expr="//page[@name='description']" position="before">
                    <page name="inputs" string="Inputs">
                        <field mode="tree" name="input_ids">
                            <tree editable="bottom" string="Input Data">
                                <field name="input_type_id"/>
                                <field name="name"/>
                                <field name="code"/>
                            </tree></field>
                    </page>
                </xpath>
            </data></field>
    </record>
</odoo>
