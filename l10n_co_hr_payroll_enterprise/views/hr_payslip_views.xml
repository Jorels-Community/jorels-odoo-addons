<odoo>
    <record id="hr_payslip_view_form_l10n_co_hr_payroll" model="ir.ui.view">
        <field name="name">hr.payslip.form.l10n_co_hr_payroll.inherit</field>
        <field name="model">hr.payslip</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" icon="fa-globe icon" invisible="edi_uuid == False" name="dian_preview" type="object">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">
                                DIAN
                            </span>
                            <span class="o_stat_text">
                                Web View
                            </span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//button[@name='action_payslip_done']" position="after">
                    <button groups="base.group_no_one" invisible="state in ('draft', 'verify')" name="status_zip" string="Consult DIAN" type="object"/>
                </xpath>
                <xpath expr="//field[@name='contract_id']" position="before">
                    <field name="date"/>
                    <field name="payment_date"/>
                    <field name="payment_form_id"/>
                    <field name="payment_method_id"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']" position="after">
                    <group>
                        <field name="accrued_total_amount" readonly="True" widget="monetary"/>
                        <field name="deductions_total_amount" readonly="True" widget="monetary"/>
                        <field name="total_amount" readonly="True" widget="monetary"/>
                        <field invisible="1" name="others_total_amount" readonly="True" widget="monetary"/>
                        <field invisible="1" name="currency_id"/>
                    </group>
                    <group>
                        <field name="worked_days_total" readonly="True"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='input_line_ids']" position="after">
                    <separator string="Earn Details"/>
                    <field name="earn_ids"><tree editable="bottom" string="Earn Details">
                            <field name="rule_input_id" options="{'no_create': True, 'no_open': True}"/>
                            <field invisible="1" name="category"/>
                            <field invisible="1" name="code"/>
                            <field name="name"/>
                            <field invisible="category == 'suspension_or_unpaid_leaves' or category == 'legal_strikes'" name="amount"/>
                            <field name="quantity" readonly="category != 'vacation_compensated' and category != 'primas'"/>
                            <field invisible="category == 'suspension_or_unpaid_leaves' or category == 'legal_strikes'" name="total"/>
                            <field invisible="True" name="sequence"/>
                            <field invisible="category != 'vacation_common' and category != 'licensings_maternity_or_paternity_leaves' and category != 'licensings_permit_or_paid_licenses' and category != 'licensings_suspension_or_unpaid_leaves' and category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours' and category != 'incapacities_common' and category != 'incapacities_professional' and category != 'incapacities_working' and category != 'legal_strikes'" name="date_start"/>
                            <field invisible="category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours'" name="time_start" widget="float_time"/>
                            <field invisible="category != 'vacation_common' and category != 'licensings_maternity_or_paternity_leaves' and category != 'licensings_permit_or_paid_licenses' and category != 'licensings_suspension_or_unpaid_leaves' and category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours' and category != 'incapacities_common' and category != 'incapacities_professional' and category != 'incapacities_working' and category != 'legal_strikes'" name="date_end"/>
                            <field invisible="category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours'" name="time_end" widget="float_time"/>
                        </tree>
                        <form string="Earn Details">
                            <group>
                                <field name="rule_input_id" options="{'no_create': True, 'no_open': True}"/>
                                <field invisible="1" name="category"/>
                                <field invisible="1" name="code"/>
                                <field name="name"/>
                                <field invisible="category == 'suspension_or_unpaid_leaves' or category == 'legal_strikes'" name="amount"/>
                                <field name="quantity" readonly="category != 'vacation_compensated' and category != 'primas'"/>
                                <field invisible="category == 'suspension_or_unpaid_leaves' or category == 'legal_strikes'" name="total"/>
                                <field name="sequence"/>
                                <field invisible="category != 'vacation_common' and category != 'licensings_maternity_or_paternity_leaves' and category != 'licensings_permit_or_paid_licenses' and category != 'licensings_suspension_or_unpaid_leaves' and category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours' and category != 'incapacities_common' and category != 'incapacities_professional' and category != 'incapacities_working' and category != 'legal_strikes'" name="date_start"/>
                                <field invisible="category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours'" name="time_start" widget="float_time"/>
                                <field invisible="category != 'vacation_common' and category != 'licensings_maternity_or_paternity_leaves' and category != 'licensings_permit_or_paid_licenses' and category != 'licensings_suspension_or_unpaid_leaves' and category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours' and category != 'incapacities_common' and category != 'incapacities_professional' and category != 'incapacities_working' and category != 'legal_strikes'" name="date_end"/>
                                <field invisible="category != 'daily_overtime' and category != 'overtime_night_hours' and category != 'hours_night_surcharge' and category != 'sunday_holiday_daily_overtime' and category != 'daily_surcharge_hours_sundays_holidays' and category != 'sunday_night_overtime_holidays' and category != 'sunday_holidays_night_surcharge_hours'" name="time_end" widget="float_time"/>
                            </group>
                        </form></field>
                    <separator string="Deduction Details"/>
                    <field name="deduction_ids"><tree editable="bottom" string="Deduction Details">
                            <field name="rule_input_id" options="{'no_create': True, 'no_open': True}"/>
                            <field invisible="1" name="category"/>
                            <field invisible="1" name="code"/>
                            <field name="name"/>
                            <field name="amount"/>
                            <field invisible="True" name="sequence"/>
                        </tree>
                        <form string="Deduction Details">
                            <group>
                                <field name="rule_input_id" options="{'no_create': True, 'no_open': True}"/>
                                <field invisible="1" name="category"/>
                                <field invisible="1" name="code"/>
                                <field name="name"/>
                                <field name="amount"/>
                                <field name="sequence"/>
                            </group>
                        </form></field>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="edi_response" string="Edi Response">
                        <group>
                            <field name="payslip_edi_ids" readonly="True"/>
                            <field name="edi_sync" readonly="True"/>
                            <field name="edi_is_not_test" readonly="True"/>
                            <field name="edi_is_valid" readonly="True"/>
                            <field name="edi_is_restored" readonly="True"/>
                            <field name="edi_algorithm" readonly="True"/>
                            <field name="edi_class" readonly="True"/>
                            <field name="edi_number" readonly="True"/>
                            <field class="text-break" name="edi_uuid" readonly="True"/>
                            <field name="edi_issue_date" readonly="True"/>
                            <field name="edi_issue_datetime"/>
                            <field name="edi_expedition_date" readonly="True"/>
                            <field class="text-break" name="edi_zip_key" readonly="True"/>
                            <field name="edi_status_code" readonly="True"/>
                            <field class="text-break" name="edi_status_description" readonly="True"/>
                            <field class="text-break" name="edi_status_message" readonly="True"/>
                            <field class="text-break" name="edi_errors_messages" readonly="True"/>
                            <field name="edi_xml_name" readonly="True"/>
                            <field name="edi_zip_name" readonly="True"/>
                            <field class="text-break" name="edi_signature" readonly="True"/>
                            <field class="text-break" name="edi_qr_code" readonly="True"/>
                            <field class="text-break" name="edi_qr_data" readonly="True"/>
                            <field class="text-break" name="edi_qr_link" readonly="True" widget="url"/>
                            <field class="text-break" name="edi_pdf_download_link" readonly="True" widget="url"/>
                            <field name="edi_xml_base64" readonly="True"/>
                            <field name="edi_application_response_base64" readonly="True"/>
                            <field name="edi_attached_document_base64" readonly="True"/>
                            <field name="edi_pdf_base64" readonly="True"/>
                            <field name="edi_zip_base64" readonly="True"/>
                            <field name="edi_type_environment" readonly="True"/>
                        </group>
                    </page>
                    <page string="Edi Payload">
                        <group>
                            <field name="edi_payload_html" readonly="True"/>
                            <field class="text-break" groups="base.group_no_one" name="edi_payload" readonly="True"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='credit_note']" position="after">
                    <field invisible="credit_note == False" name="origin_payslip_id"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='rate']" position="after">
                    <field name="edi_quantity"/>
                    <field name="edi_rate"/>
                </xpath>
            </data></field>
    </record>
    <record id="hr_payslip_tree_l10n_co_payroll" model="ir.ui.view">
        <field name="name">hr.payslip.tree.l10n.co.payroll</field>
        <field name="model">hr.payslip</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='state']" position="before">
                    <field name="worked_days_total"/>
                    <field name="accrued_total_amount"/>
                    <field name="deductions_total_amount"/>
                    <field name="total_amount"/>
                </xpath>
            </data></field>
    </record>
</odoo>
