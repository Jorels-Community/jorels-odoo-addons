<odoo>
    <record id="view_view_form_inherit_debug_ai" model="ir.ui.view">
        <field name="name">ir.ui.view.form.inherit.debug_ai</field>
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" ref="base.view_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inherit_children']//field[@name='inherit_children_ids']" position="before">
                <group string="Debug AI" colspan="4">
                    <field name="claude_prompt"
                           placeholder="Enter instructions for Debug AI to generate a new inherited view"/>
                    <button string="Generate Inherited View" type="object" name="generate_inherited_view_with_claude"
                            class="btn-primary"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='architecture']//field[@name='arch_base']" position="before">
                <group string="Debug AI" colspan="4">
                    <field name="claude_edit_prompt" placeholder="Enter instructions to modify this view"/>
                    <button string="Edit Current View" type="object" name="edit_view_with_claude" class="btn-primary"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>